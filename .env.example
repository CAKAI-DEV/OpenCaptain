# Database
DATABASE_URL=postgres://blockbot:devpassword@localhost:5433/blockbot
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-32-character-minimum-secret-key-here
JWT_REFRESH_SECRET=another-32-character-minimum-secret-here

# Email (Resend)
RESEND_API_KEY=re_your_resend_api_key

# Application
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000
APP_URL=http://localhost:3000

# LiteLLM (AI/LLM Proxy)
LITELLM_URL=http://localhost:4010
LITELLM_API_KEY=your-litellm-master-key
LITELLM_MASTER_KEY=your-litellm-master-key
LITELLM_SALT_KEY=your-litellm-salt-key

# LLM Provider API Keys (at least one required)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Production only
DOMAIN=api.yourdomain.com
ACME_EMAIL=admin@yourdomain.com
